<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.samuelnotes.viewtest.MainActivity">


    <Button
        android:id="@+id/act_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press"
        android:textColor="#000000" />


    <ImageView
        android:id="@+id/act_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_btn"
        android:src="@android:drawable/sym_def_app_icon"
        android:text="Image" />

    <com.samuelnotes.viewtest.view.MyLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/act_iv"
        android:background="@android:color/holo_green_light"
        android:orientation="vertical">


        <Button
            android:id="@+id/act_btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Press1"
            android:textColor="#000000" />

        <Button
            android:id="@+id/act_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Press2"
            android:textColor="#000000" />


    </com.samuelnotes.viewtest.view.MyLinearLayout>


</RelativeLayout>
